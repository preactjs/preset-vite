{
	"name": "@preact/preset-vite",
	"version": "2.10.2",
	"description": "Preact preset for the vite bundler",
	"type": "module",
	"main": "./src/index.js",
	"exports": {
		".": "./src/index.js",
		"./package.json": "./package.json"
	},
	"types": "src/index.d.ts",
	"scripts": {
		"prepare": "npx simple-git-hooks",
		"dev": "vite demo",
		"dev:build": "vite build demo",
		"dev:preview": "vite preview demo",
		"test": "premove demo/node_modules && node --test test"
	},
	"keywords": [
		"preact",
		"vite",
		"vite-preset",
		"preset"
	],
	"author": "The Preact Team (https://preactjs.com)",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/preactjs/preset-vite.git"
	},
	"license": "MIT",
	"files": [
		"src/"
	],
	"dependencies": {
		"@babel/plugin-transform-react-jsx": "^7.27.1",
		"@babel/plugin-transform-react-jsx-development": "^7.27.1",
		"@prefresh/vite": "^2.4.11",
		"babel-plugin-transform-hook-names": "^1.0.2",
		"debug": "^4.4.3",
		"picocolors": "^1.1.1",
		"vite-prerender-plugin": "^0.5.12"
	},
	"peerDependencies": {
		"@babel/core": "7.x",
		"vite": "7.x"
	},
	"devDependencies": {
		"@babel/core": "^7.28.5",
		"@types/babel__core": "^7.20.5",
		"@types/debug": "^4.1.12",
		"@types/node": "^20.19.24",
		"nano-staged": "^0.8.0",
		"preact": "^10.27.2",
		"preact-iso": "^2.11.0",
		"preact-render-to-string": "^6.6.3",
		"premove": "^4.0.0",
		"prettier": "^2.2.1",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.3",
		"vite": "^7.2.2"
	},
	"nano-staged": {
		"**/*.{js,jsx,ts,tsx,yml,json}": [
			"prettier --write"
		]
	},
	"simple-git-hooks": {
		"pre-commit": "npx nano-staged"
	},
	"prettier": {
		"useTabs": true,
		"arrowParens": "avoid",
		"trailingComma": "all"
	},
	"volta": {
		"node": "20.x"
	}
}
